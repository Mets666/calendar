{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-md-offset-2">
                <h3 class="text-center major-title">Welcome to</h3>
                <h1 class="text-center">Life O'clock</h1>
                <h6 class="text-center minor-title">Your personal time manager</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
                <div class="login">

                    {% if error %}
                        <div class="message bg-red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        <div class="spacer10"></div>
                    {% endif %}

                    <form action="{{ path('login') }}" method="post">
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>

                        <div class="form-group text-center">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button type="submit" class="btn btn-success">Login</button>
                            <a class="btn btn-warning" href="{{ path("registration") }}">Register now</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}