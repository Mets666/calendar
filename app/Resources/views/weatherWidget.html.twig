<div id="weather-widget">
    {% if weather %}
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="weather-widget-city">
                <h3>{{ weather.city }}, {{ weather.country_code }}</h3>

            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="weather-widget-description">
                <p>{{ weather.description }}</p>
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="weather-widget-temperature">
                <p>{{ weather.temperature }}Â°C</p>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-5 col-sm-12">
            <div class="weather-widget-image">
                {#<div class="spacer10"></div>#}
                <img src="{{ weather.image_url }}"  alt="Weather in {{ weather.city }}">
            </div>
        </div>
        <div class="col-md-7 col-sm-12">
            <div class="weather-widget-details">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <p>Wind:</p>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <b>{{ weather.wind }} m/s</b>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <p>Humidity:</p>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <b>{{ weather.humidity }}%</b>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <p>Pressure:</p>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <b>{{ weather.pressure|round }} mb</b>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% endif %}
</div>