{% extends 'base.html.twig' %}

{% block content %}

<div class="row">
    <div class="col-md-3 col-sm-3">
        <div class="row">
                <div class="col-md-12 col-sm-12">
                    <h3>To-Do Lists:</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-sm-12">
                    {% if todo_lists is not empty %}
                        <table class="table table-hover table-category_list">
                            <thead>
                            <tr>
                                <th></th>
                                <th class="width60px"></th>
                                <th class="width80px"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for list in todo_lists %}
                                <tr>
                                    <td class="col-md-6 col-sm-6">
                                        <b>{{ list.title }}</b>
                                    </td>
                                    <td>
                                        <a href="#" id="" class="btn btn-success width60px">Rename</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('delete_todo_list', { 'listId' : list.id }) }}" onClick="return confirm('Are you sure?');" class="btn btn-danger width80px">Delete</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
    </div>
    <div class="col-md-9 col-sm-9">
    </div>
</div>
{% endblock %}