{% extends 'base.html.twig' %}

{% form_theme edit_todo_list_form with [
'form/fields/listItems.html.twig'
] %}

{% block content %}

<div class="row">
    <div class="col-md-3 col-sm-3">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <h3>To-Do Lists:</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                {% if todo_lists is not empty %}
                    <table class="table table-hover table-category_list">
                        <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for list in todo_lists %}
                            <tr>
                                <td class="width100p">
                                    <a href="{{ path('lists', { 'listId' : list.id }) }}"><b>{{ list.title }}</b></a>
                                </td>
                                <td>
                                    <a href="{{ path('delete_todo_list', { 'listId' : list.id }) }}" onClick="return confirm('Are you sure?');" class="btn btn-danger width80px">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                {{ form_start(add_todo_list_form) }}
                <div class="form-group">
                    {{ form_label(add_todo_list_form.title) }}
                    {{ form_errors(add_todo_list_form.title) }}
                    {{ form_widget(add_todo_list_form.title) }}
                </div>
                <div class="form-group">
                    {{ form_widget(add_todo_list_form.add, {'label': 'Add'}) }}
                </div>
                {{ form_end(add_todo_list_form) }}
            </div>
        </div>
    </div>
    <div class="col-md-9 col-sm-9">
        {% include 'flashMessages.html.twig' %}
        {% if selected_list is empty %}
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="no-data-message">
                        <i>There is no list to display! Please add some first.</i>
                    </div>
                </div>
            </div>
        {% else %}
            {{ form_start(edit_todo_list_form) }}
            {{ form_widget(edit_todo_list_form.id, {'value': selected_list.id}) }}
            <div class="row">
                <div class="col-md-10 col-sm-10 form-group">
                    <div id="text-list-title">
                        <h3>{{ selected_list.title }}</h3>
                    </div>
                    <div id="form-list-title" class="collapse">
                        {{ form_label(edit_todo_list_form.title) }}
                        {{ form_errors(edit_todo_list_form.title) }}
                        {{ form_widget(edit_todo_list_form.title, {'value': selected_list.title}) }}
                    </div>
                </div>
                <div class="col-md-2 col-sm-2 form-group">
                    <div id="text-list-edit">
                        <input type="button" value="Edit" class="btn btn-primary" onclick="return editTodoList()">
                    </div>
                    <div id="form-list-save" class="collapse">
                        {{ form_widget(edit_todo_list_form.add, {'label': 'Save'}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 form-group">
                    <div id="text-list-description">
                        {{ selected_list.description }}
                    </div>
                    <div id="form-list-description" class="collapse">
                        {{ form_label(edit_todo_list_form.description) }}
                        {{ form_errors(edit_todo_list_form.description) }}
                        {{ form_widget(edit_todo_list_form.description) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-sm-12 form-group" >
                    <label>Things to do:</label>
                    {{ form_label(edit_todo_list_form.items) }}
                    {{ form_errors(edit_todo_list_form.items) }}
                    {{ form_widget(edit_todo_list_form.items) }}
                </div>
            </div>
            {{ form_end(edit_todo_list_form) }}
        {% endif %}
    </div>
</div>

    <script type="application/javascript">
        var $collectionHolder;

        // setup an "add a tag" link
        var $addTagLink = $('<a href="#" class="add_list_item_link">Add a tag</a>');
        var $newLinkLi = $('<li></li>').append($addTagLink);

        jQuery(document).ready(function() {
            // Get the element that holds the collection of tags
            $collectionHolder = $('div.list-items');

            $collectionHolder.find('div.list-item').each(function() {
                addTagFormDeleteLink($(this));
            });

            // add the "add a tag" anchor and li to the tags ul
            $collectionHolder.append($newLinkLi);

            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            $collectionHolder.data('index', $collectionHolder.find(':input').length);

            $addTagLink.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // add a new tag form (see next code block)
                addListItemForm($collectionHolder, $newLinkLi);
            });
        });

        function addListItemForm($collectionHolder, $newLinkLi) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');

            // get the new index
            var index = $collectionHolder.data('index');

            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);

            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);
//            alert(newForm);

            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormLi = $('<div></div>').append(newForm);
            $newFormLi.find('div.list-item').each(function() {
                addTagFormDeleteLink($(this));
            });
//            alert($newFormLi);
            $newLinkLi.before($newFormLi);
//            addTagFormDeleteLink($newFormLi);
        }

        function addTagFormDeleteLink($tagFormLi) {
            var $removeFormA = $('<a href="#"><span class="glyphicon glyphicon-remove glyphicon-lg"></span></a>');
//            $tagFormLi.append($removeFormA);
            var $delteLinktag = $tagFormLi.find('div.list-item-delete-link');
            $delteLinktag.append($removeFormA);

            $removeFormA.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // remove the li for the tag form
                if(confirm('Are you sure?')) {
                    $tagFormLi.remove();
                }
            });
        }
    </script>


{% endblock %}
