<div id="addCategoryContent" title="Event Details" style="display:none;">
    {{ form_start(add_category_form, {'action': path('add_category')}) }}
    <div class="form-group">
        {{ form_label(add_category_form.title) }}
        {{ form_errors(add_category_form.title) }}
        {{ form_widget(add_category_form.title) }}
    </div>
    <div class="form-group">
        {{ form_label(add_category_form.color) }}
        {{ form_errors(add_category_form.color) }}
        {{ form_widget(add_category_form.color) }}
    </div>
    <div class="form-group">
        {{ form_widget(add_category_form.add) }}
    </div>
    {{ form_end(add_category_form) }}
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#addCategoryContent').dialog({ modal: true, autoOpen: false, title: 'New Category', width:400 })
        $('#openAddCategoryModal').click(function(){ $('#addCategoryContent').dialog('open'); return false;});
    })
</script>